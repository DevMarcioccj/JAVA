package Main;

import java.util.Scanner;

import javax.swing.JOptionPane;

import java.io.IOException;

public class Main {
	static Scanner scanner = new Scanner(System.in);
	
	public static void main(String[] args) throws InterruptedException{
		
		int life = 20;
		String arma = "";
		int dano = 0;
		String name = name();
		Thread.sleep(1000);
		//Apresentacao(name);
		Explicacao();		
		int personagem = EscolhaGenero();
		
		if (personagem == 0) {
			life = 40;	
			PremiacaoPersonagem(personagem, life, dano, arma);
		}
		else {
			arma = "Cajado Nevoeiro";
			dano = 15;
			PremiacaoPersonagem(personagem, life, dano, arma);
		}
		PassadoPerso(personagem);	
	}
	
	static String name() {

		String name = JOptionPane.showInputDialog("Digite seu nome: ");
		return name;		
	}
	
	static void Apresentacao(String name) throws InterruptedException {
		JOptionPane.showMessageDialog(null, "Seja bem vindo, "+name+"!", "Apresentação", JOptionPane.PLAIN_MESSAGE);
		JOptionPane.showMessageDialog(null, "Esse é um jogo teste, desenvolvimento unicamente com JAVA.", "Apresentação", JOptionPane.PLAIN_MESSAGE);
		JOptionPane.showMessageDialog(null, "Para sugestões, entrar em contato em: dev.marciocoelho@gmail.com.", "Apresentação", JOptionPane.PLAIN_MESSAGE);
	}
	
	static void Explicacao() throws InterruptedException {
		JOptionPane.showMessageDialog(null, "Você é um jovem aventureiro. Sua vida é definida por pontos, 20 pontos. Se ela zerar, você morre.", "Conhecendo o jogo", JOptionPane.NO_OPTION);
		JOptionPane.showMessageDialog(null, "Para poder combater os inimigos, você deverá equipar sua arma. Cada arma tem seu dano", "Conhecendo o jogo", JOptionPane.NO_OPTION);
		JOptionPane.showMessageDialog(null, "Boa sorte, e bom jogo!", "Iniciando", JOptionPane.NO_OPTION);
	}
	
	static int EscolhaGenero() {
		Object[] options = {"Guerreiro", "Mago"};
		int opcao = JOptionPane.showOptionDialog(null, "Escolhe seu personagem", "Personagem", 0, JOptionPane.QUESTION_MESSAGE, null, options, options[0]);
		return opcao;
	}
	
	static void PremiacaoPersonagem(int personagem, int life, int dano, String arma) {
		if (personagem == 0)
			JOptionPane.showMessageDialog(null, "Devido a sua escolha, lhe fora concedido mais 20 pontos de vida. Agora sua vida é de "+life+" pontos", "Escolha Guerreiro", JOptionPane.INFORMATION_MESSAGE);
		else 
			JOptionPane.showMessageDialog(null, "Devido a sua escolha, lhe fora concedido uma arma: "+arma+" . Você agora pode atacar, seu dano é: "+dano+".", "Escolha Mago", JOptionPane.INFORMATION_MESSAGE);
	}
	
	static void PassadoPerso(int personagem) {
		if (personagem == 0) {
			JOptionPane.showMessageDialog(null, "Durante anos, sua única opção de vida foi a guerra. "
					+ "Ser um guerreiro lhe proporcionou muitas realizações, perderá seu fiel aliado, um escudo de titânio capaz de segurar a espada mais poderosa já feita 'Kleopatra', mas ela se foi. "
					+ "Roubada por um ladrão qualquer, agora te deixava desprotegido, apenas com uma armadura quebrava.", "Capítulo I", JOptionPane.INFORMATION_MESSAGE);
		}
		else {
			JOptionPane.showMessageDialog(null, "Já fora considerado o maior de todos, o supremo Mago, esquecido com o tempo."
					+ "O anel dos anéis havia sido destruído, dilacerando assim, todo seu poder. A única coisa que ainda era sua parceira, um velho cajado porém útil: Cajado Nevoeiro."
					+ " Esse herdado de seu grande mestre, Alakab.", "Capítulo I", JOptionPane.INFORMATION_MESSAGE);
		}
	}
}
